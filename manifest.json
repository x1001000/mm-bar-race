{
  "manifest_version": 3,
  "name": "MacroMicro Bar Race",
  "version": "1.0.0",
  "description": "Add bar race visualization to Highcharts on MacroMicro.me",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.macromicro.me/*",
    "https://en.macromicro.me/*",
    "https://sc.macromicro.me/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.macromicro.me/charts/*",
        "https://www.macromicro.me/collections/*",
        "https://en.macromicro.me/charts/*",
        "https://en.macromicro.me/collections/*",
        "https://sc.macromicro.me/charts/*",
        "https://sc.macromicro.me/collections/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["page-script.js"],
      "matches": [
        "https://www.macromicro.me/*",
        "https://en.macromicro.me/*",
        "https://sc.macromicro.me/*"
      ]
    }
  ]
}
